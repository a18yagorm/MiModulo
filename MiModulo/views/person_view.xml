<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View-->
    <record id="person_view_form" model="ir.ui.view">
        <field name="name">Formulario de personas</field>
        <field name="model">houses.person</field>
        <field name="arch" type="xml">
            <form delete="true">
                <group>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name='photo' widget="image" class="oe_avatar" />
                    </group>
                    <group>
                        <field name="nationality"/>
                        <field name="person_dob"/>
                        <field name="person_job"/>
                        <field name="gender"/>
                        <field name="person_blood_type"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record model="ir.ui.view" id="person_view_tree">
        <field name="name">Lista de personas</field>
        <field name="model">houses.person</field>
        <field name="arch" type="xml">
            <tree string="Personas">
                <field name="name"/>
                <field name="age"/>
            </tree>
        </field>
    </record>
</odoo>